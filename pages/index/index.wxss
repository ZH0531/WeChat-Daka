}


@keyframes pulseGlow {
  0% {
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
    transform: translateZ(0);
  }
  100% {
    box-shadow: 0 4rpx 24rpx rgba(52, 199, 89, 0.3);
    transform: translateZ(0) scale(1.01);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx) scale(0.98);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.record-info {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
}

.record-index {
  font-weight: 600;
  font-size: 30rpx;
  margin-bottom: 8rpx;
  color: #444;
}

.record-time {
  color: #888;
  font-size: 26rpx;
}
  
  /* 无记录提示 */
.no-record {
  text-align: center;
  color: #aaa;
  font-size: 28rpx;
  margin-top: 100rpx;
  padding: 40rpx 0;
  background: rgba(255,255,255,0.8);
  border-radius: 20rpx;
}
  
  /* 打卡按钮区域 */
.button-area {
  padding: 40rpx 30rpx env(safe-area-inset-bottom);
  z-index: 10;
}

.btn-punch {
  width: 100%;
  background: linear-gradient(135deg, #34c759, #00b894);
  color: white;
  font-size: 36rpx;
  font-weight: 600;
  padding: 28rpx 0;
  border-radius: 60rpx;
  box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.15);
  transition: all 0.2s cubic-bezier(0.34, 1.56, 0.64, 1);
  position: relative;
  overflow: hidden;
  transform: translateZ(0); /* 硬件加速 */
  will-change: transform; /* 优化动画性能 */
}

.btn-punch::after {
  content: "";
  display: block;
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  pointer-events: none;
  background-image: radial-gradient(circle, rgba(255, 255, 255, 0.3) 10%, transparent 10.01%);
  background-repeat: no-repeat;
  background-position: 50%;
  transform: scale(10, 10);
  opacity: 0;
  transition: transform 0.5s, opacity 0.8s;
}

.btn-punch:active::after {
  transform: scale(0, 0);
  opacity: 0.3;
  transition: 0s;
}

.btn-punch-hover {
  transform: scale(0.95) translateY(4rpx);
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.2);
  opacity: 0.9;
}

.new-record {
  animation: fadeIn 0.4s ease-out forwards;
}

/* 按压状态样式 */
.record-card-pressed {
  transform: scale(0.98) translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
  transition: all 0.15s cubic-bezier(0.34, 1.56, 0.64, 1);
}

/* 按压回弹动画 */
@keyframes pressSpring {
  0% {
    transform: scale(1) translateY(0);
  }
  50% {
    transform: scale(0.95) translateY(4rpx);
  }
  100% {
    transform: scale(1.02) translateY(-2rpx);
  }
}

/* 长按激活状态 */
.record-card-longpress {
  animation: pressSpring 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards;
}



.revert-btn {
  width: 60rpx;
  height: 60rpx;
  background-color: #f0f0f0;
  border-radius: 50%;
  color: #888;
  font-size: 36rpx;
  font-weight: bold;
  transition: background-color 0.2s ease, transform 0.2s ease;
  flex-shrink: 0;
  margin-left: 20rpx;
  
  /* 使用行高进行垂直居中，并微调 */
  text-align: center;
  line-height: 60rpx; /* 60rpx为基准，+2rpx用于下移 */
}

.revert-btn:active {
  background-color: #e0e0e0;
  transform: scale(0.9);
}
