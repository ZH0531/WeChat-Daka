/* 布局整体 */
.container {
    display: flex;
    flex-direction: column;
    height: 100vh;
    background-color: #f9f9f9;
    box-sizing: border-box;
    transition: background-color 0.3s ease, color 0.3s ease;
  }
  
/* 暗黑模式 */
.dark-mode {
    background-color: #121212;
    color: #e0e0e0;
}

.dark-mode .top-tip {
    color: #e0e0e0;
}

.dark-mode .record-header {
    color: #e0e0e0;
}

.dark-mode .record-card {
    background-color: #2a2a2a;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

.dark-mode .record-index {
    color: #e0e0e0;
}

.dark-mode .record-time {
    color: #aaa;
}

.dark-mode .clear-records {
    color: #aaa;
}

.dark-mode .no-record {
    color: #888;
    background: rgba(42, 42, 42, 0.8);
}

.dark-mode .btn-punch {
    background: linear-gradient(135deg, #2aa24b, #008563);
}

.dark-mode .revert-btn {
  background-color: #3a3a3c;
  color: #e0e0e0;
}

/* 暗黑模式下的按压状态 */
.dark-mode .record-card-pressed {
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}
  
  /* 上半部分，用于居中显示提示文字 */
  .top-half {
    flex: 0 0 30%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding-top: 60rpx;
  }
  
  /* 顶部提示文字 */
.top-tip {
  font-size: 40rpx;
  text-align: center;
  margin-top: 80rpx;
  margin-bottom: 40rpx;
  padding: 0 30rpx;
  line-height: 1.5;
  transition: color 0.5s ease;
}

.tip-time {
  font-size: 44rpx;
  font-weight: 700;
  display: block;
  margin-top: 20rpx;
  transition: all 0.3s;
}
  
  /* 打卡记录区域容器 */
.record-list-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 0 10rpx;
  margin-top: 20rpx;
  overflow: hidden;
  width: 100%;
}

/* 记录区域标题容器 */
.record-header-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 10rpx;
}

/* 记录区域标题 */
.record-header {
  font-size: 32rpx;
  font-weight: 600;
  color: #444;
  position: relative;
}

.record-header::after {
  content: "";
  position: absolute;
  left: 0;
  bottom: -10rpx;
  width: 60rpx;
  height: 4rpx;
  background: #34c759;
  border-radius: 4rpx;
}

/* 清除历史记录 */
.clear-records {
  font-size: 26rpx;
  color: #888;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.clear-records:active {
  background-color: rgba(0, 0, 0, 0.05);
  color: #666;
}

/* 记录列表 */
.record-list {
  flex: 1;
  width: 100%;
  height: 100%;
  overflow: hidden;
  padding: 0 20rpx;
}

/* 打卡记录卡片 */
.record-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 36rpx 40rpx;
  margin: 0 0 28rpx 0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  position: relative;
  transition: all 0.3s ease;
  transform-origin: center center;
  width: calc(100% - 40rpx);
  box-sizing: border-box;
  overflow: hidden; /* 新增：裁切所有超出圆角的内容 */
}

.record-card::before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  width: 6rpx;
  height: 100%;
  background: #e0e0e0;
  /* 此处的圆角已不再需要，父级的overflow:hidden会处理 */
  transition: background 0.3s ease;
}

.record-card-latest::before {
  background: #34c759;
}

